// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/universal
{
	"name": "Default Linux Universal",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  // Forward ports for Vue.js and Flask
  "forwardPorts": [8080, 5000],
  
  // Install necessary extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "octref.vetur",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/bin/python3",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      }
    }
  },
  
  // Run commands after container is created to set up the project
  "postCreateCommand": "npm install -g @vue/cli && pip3 install flask flask-cors"
  
  // Comment this line out if you want to run as root
  // "remoteUser": "vscode"
}
